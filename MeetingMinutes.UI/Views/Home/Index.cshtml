@{
    ViewData["Title"] = "Home Page";
}

<div class="custom-container">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Meeting Minutes</h5>
                        <a href="#" class="text-decoration-none">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Radio Buttons -->
                    <div class="mb-3">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="options" id="Corporate" value="Corporate" checked>
                            <label class="form-check-label" for="Corporate">Corporate</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="options" id="Individual" value="Individual">
                            <label class="form-check-label" for="Individual">Individual</label>
                        </div>
                    </div>

                    <!-- Full Width Divider Line -->
                    <div class="divider"></div>

                    <!-- Two Column Form with Horizontal Label-Input Alignment -->

                    <div class="row two-col-form">
                        <div class="col-md-6">
                            <div class="row">
                                <!-- customer name - Dropdown -->
                                <div class="form-horizontal-group col-md-12">
                                    <label for="customername" class="form-label required">Customer Name</label>
                                    <div>
                                        <select class="form-select" id="customername">
                                            <option value="" selected>select customer name</option>
                                        </select>
                                        <div class="error-message" id="customername-error"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <!-- Date and Time Picker Group -->
                                <div class="form-horizontal-group col-md-12">
                                    <label class="form-label">Date</label>
                                    <div class="datetime-group">
                                        <!-- Date Picker (Textbox Style) -->
                                        <input type="date" class="form-control" id="datepicker" placeholder="MM/DD/YYYY">
                                       @*  <div class="form-horizontal-group"> *@
                                            <label style="width:35px !important">Time</label>
                                            <input type="text" class="form-control timepicker" id="timeInput"
                                                   placeholder="HH:MM AM/PM" autocomplete="off">
                                      </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-horizontal-group col-md-12">
                                    <label for="meetingplace" class="form-label required">Meeting Place</label>
                                    <div>
                                        <input type="text" required class="form-control" id="meetingplace" placeholder="meeting place">
                                        <div class="error-message" id="meetingplace-error"></div>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="form-horizontal-group col-md-12">
                                    <label for="attendclientside" class="form-label required">Attends From Client Side</label>
                                    <div>
                                        <input type="text" required class="form-control" id="attendclientside" placeholder="Present client side">
                                        <div class="error-message" id="attendclientside-error"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-horizontal-group">
                                    <label for="attendhostside" class="form-label required">Attends From Host Side</label>
                                    <div>
                                        <input type="text" required class="form-control" id="attendhostside" placeholder="Present self side">
                                        <div class="error-message" id="attendhostside-error"></div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-6">
                            <div class="row">
                                <!-- meeting agenda - Text Input -->
                                <div class="form-horizontal-group col-md-12">
                                    <label style="display:block;" for="meetingagenda" class="form-label required">Meeting Agenda</label>
                                    <div>
                                        <textarea class="form-control" id="meetingagenda" placeholder="Meeting agenda" required></textarea>
                                        <div class="error-message" id="meetingagenda-error"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <!-- meeting agenda - Text Input -->
                                <div class="form-horizontal-group col-md-12">
                                    <label for="meetingdiscussion" class="form-label required">Meeting Discussion</label>
                                    <div>
                                        <textarea class="form-control" id="meetingdiscussion" placeholder="Meeting discussion" required></textarea>
                                        <div class="error-message" id="meetingdiscussion-error"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <!-- meeting agenda - Text Input -->
                                <div class="form-horizontal-group col-md-12">
                                    <label for="meetingdecision" class="form-label required">Meeting Decision</label>
                                    <div>
                                        <textarea class="form-control" id="meetingdecision" placeholder="Meeting decision" required></textarea>
                                        <div class="error-message" id="meetingdecision-error"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="card mt-2">
        <div class="card-body">
            <div class="row">
                <div class="form-horizontal-group col-md-8">
                    <label style="width:300px" for="interestedproduct" class="form-label">Interested Product/Service</label>
                    <div>
                        <select class="form-select" id="productDropdown">
                            <option value="" selected>select product/service interested</option>
                        </select>
                        <div class="error-message" id="productDropdown-error"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-horizontal-group col-md-8">
                    <label style="width:300px" class="form-label">Quantity</label>
                    <div class="form-horizontal-group">
                        <!-- Date Picker (Textbox Style) -->
                        <div>
                            <input type="number" class="form-control" id="quantity">
                            <div class="error-message" id="quantity-error"></div>
                        </div>
                        <div class=" form-horizontal-group">
                            <label style="width:35px !important">Unit</label>
                            <input type="text" class="form-control" id="unitInput" readonly>
                        </div>
                    </div>
                </div>
            </div>

            <button class="btn btn-sm btn-secondary" style="width:80px" id="addProduct">
                <i class="bi bi-plus-circle"></i> Add
            </button>
        </div>
    </div>

    <div class="card mt-2">
        <div class="card-body">
            <table class="table table-striped table-bordered" id="productTable">
                <thead>
                    <tr>
                        <th>SL#</th>
                        <th style="display:none">Product ID</th>
                        <th style="width:50%">Product Name</th>
                        <th>Quantity</th>
                        <th>Unit</th>
                        <th style="width:8%">Edit</th>
                        <th style="width:9%">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="7" style="text-align:center">No matching record found</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer" style="padding-left:0px">
        <button id="saveChanges" class="btn btn-secondary btn-sm" style="width:80px"> <i class="bi bi-save"></i> Save</button>
        <button class="btn btn-outline-secondary ms-2 btn-sm" style="width:80px"> <i class="bi bi-arrow-clockwise"></i> Refresh</button>
    </div>
</div>